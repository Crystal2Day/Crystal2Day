{
  "name": "Figure",

  "description": "A simple entity, which will be the base for the player",

  "default_state": {
    "test": 123
  },

  "options": {
    "grid_alignment": 1
  },

  "map_boxes": [
    {"size": {"x": 50, "y": 50}, "position": {"x": -25, "y": -25}}
  ],

  "bounding_boxes": [
    {"size": {"x": 50, "y": 50}, "position": {"x": -25, "y": -25}}
  ],

  "shapes": [
    {"type": "circle", "radius": 25, "position": {"x": 0, "y": 0}}
  ],

  "sprite_templates": [
    {
      "texture": "example/ExampleSprite.png",
      "source_rect": {"width": 50, "height": 50},
      "position": {"x": -25, "y": -25},
      "z": 3,
      "animation_template": {
        "start_frame": 1,
        "loop_end_frame": 2,
        "frame_delay": 10
      }
    }
  ],

  "coroutine_templates": {
    "update": {"file": "example/ExampleUpdate.rb"},
    "post_update": {"proc": "FigurePostUpdate"},
    "entity_collision": {"file": "example/ExampleCollisionEntity.rb"},
    "tile_collision": {"file": "example/ExampleCollisionTile.rb"}
  }
}
